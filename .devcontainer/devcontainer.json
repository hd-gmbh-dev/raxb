// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "Debian",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/hd-gmbh-dev/devcontainer-features/autotools:0.1.0": {},
    "ghcr.io/hd-gmbh-dev/devcontainer-features/clang:0": {},
    "ghcr.io/hd-gmbh-dev/devcontainer-features/cmake:0": {},
    "ghcr.io/hd-gmbh-dev/devcontainer-features/java:0.1.0": {},
    "ghcr.io/hd-gmbh-dev/devcontainer-features/emscripten:0.1.0": {},
    "ghcr.io/devcontainers/features/rust:1": {}
  },
  "postCreateCommand": "bash scripts/build-dependencies.sh",

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "settings": {
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          },
          "fish": {
            "path": "fish"
          },
          "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        }
      }
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
